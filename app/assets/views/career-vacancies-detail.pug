                                            h3.feedback__title Откликнуться

                                        .feedback__form-content
                                            .form__group
                                                .input
                                                    input.input__elem(type="text" placeholder="Имя" name="feedback-response-name")

                                                .input
                                                    input.input__elem(type="text" placeholder="Email" name="feedback-response-email")

                                            .form__group
