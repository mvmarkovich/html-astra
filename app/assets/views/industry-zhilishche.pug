                            .features__item.col-12.col-md-6
                                .features__item--inner
                                    .features__item-img--wrap
                                        img.features__item-img(src="img/content/industry/features/zhilishche/item_2.svg" width="40" height="40" alt="Название")

                                    .features__item-info
                                        .features__item-desc Ресурсоснабжающим организациям (участникам рынка ЖКХ)

                            .features__item.col-12.col-md-6
                                .features__item--inner
                                    .features__item-img--wrap
                                        img.features__item-img(src="img/content/industry/features/zhilishche/item_3.svg" width="40" height="40" alt="Название")

